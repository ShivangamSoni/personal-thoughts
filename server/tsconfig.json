{
    "exclude": ["./dev"],
    "include": ["./src"],
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["es6"],
        "rootDir": "./src",
        "outDir": "./dist",
        "allowJs": true,
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true
    }
}
